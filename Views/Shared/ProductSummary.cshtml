@model Product

<div class="card horizontal">
    <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src="~/images/product.jpg">
      </div>
        <div class="card-content">
           <span class="card-title activator grey-text text-darken-4">@Model.Name<i class="material-icons right">more_vert</i></span>
           <h6>@Model.Price.ToString("c")</h6>
        </div>
        <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">@Model.Name<i class="material-icons right">close</i></span>
            <p>@Model.Description</p>
        </div>
</div>
